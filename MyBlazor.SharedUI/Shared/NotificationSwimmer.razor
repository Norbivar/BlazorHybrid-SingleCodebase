@using MyBlazor.SharedUI.Pages.Models

<div class="base @(notificationModel.Display ? "sliding-in" : "sliding-out")">
	<div class="internal">
		<div class="title item item-1">
			<span class="oi oi-info me-2" aria-hidden="true"></span>
			<strong>@notificationModel.Title</strong>
		</div>

		<div class="desc item item-2">
			@notificationModel.Description
		</div>

		<div class="exit item item-3">
			<span class="oi oi-x" aria-hidden="true"></span>
		</div>
	</div>
</div>

@code {
	[Parameter]
	public required NotificationModel notificationModel { get; set; }
}
